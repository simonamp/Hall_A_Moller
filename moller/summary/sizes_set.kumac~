MACRO sizes_set type=0
*
* Sizes: type=0 - projector
*

if [type]=0 then
*   Projector
  graph/set hwid 4
  graph/set bwid 4
  graph/set pwid 2
  graph/set fwid 4
  graph/set xwid 2
  graph/set ywid 2
  graph/set vfon -40
  graph/set lfon -40
  graph/set cfon -40
  graph/set tfon -40

  graph/set csiz 0.42
  graph/set asiz 0.52
  graph/set vsiz 0.48

  graph/set csiz 0.40
  graph/set asiz 0.40
  graph/set vsiz 0.40

  graph/set pass 9
  graph/set cshi 0.01
  graph/set xlab 1.8
  graph/set ylab 1.0

elseif [type]=0 then
endif

 mess sizes_set done

RETURN
